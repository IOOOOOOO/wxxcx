.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}

/*topic list*/

.topic-common-list {
  margin-top: 140rpx;
  padding:12rpx 0rpx;
  font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;
  /* padding:30rpx 30rpx; */
}

.topic-list-item {
  position: relative;
  /* border-bottom: 1px solid #eee;   */
  overflow: hidden;
  clear: both;
  /* border: 1px solid #ccc; *//* border-radius: 6px; */
  margin-bottom: 30rpx;
  background: #fff;
}

.topic-list-item  image.cover {
  margin: 0 40rpx;
  width: 90%;
  height: 375rpx;
  border-radius: 10rpx;
  /*filter: blur(4px);*/
}

.topic-content-title {
  font-weight: bold;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  /* border-bottom: 1px solid #fff; */
  z-index: 2;
  left: 60rpx;
  top: 80rpx;
}

.topic-content-title text {
  font-weight: bold;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.topic-content-title-line{
  width: 50px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff; 
  z-index: 2;
  left: 64rpx;
  top: 140rpx;
}


.topic-content-brief {
  /* padding: 0rpx 30rpx 30rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 240rpx;
}

.topic-content-brief text {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #fff;
}

.searchKey {
  color: #121b23;
}
