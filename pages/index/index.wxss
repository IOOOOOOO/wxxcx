/*   index   swiper  */

swiper.index-swiper {
  position: relative;
  height: 420rpx;
}

swiper .swiper-mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 90%;
}

swiper image {
  display: block;
  margin: 0 auto;
  border-radius: 10rpx;
  width: 90%;
  height: 96%;
}

swiper .swiper-desc {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 90%;
  /*background: linear-gradient(to bottom, rgba(0, 0, 0, 0)0%, rgba(63, 76, 88, 0.3)100%);*/
  color: #fff;
  line-height: 150rpx;
  margin: 0 auto;
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  /* height: 120rpx; */
  /*text-shadow: 0px 0px 16px #646d75;*/
}

/*   index   swiper  end  */

