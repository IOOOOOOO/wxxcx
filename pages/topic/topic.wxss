.container {
  height: 100%;

}
.topic-container{
  background-color: #fff;
}


/*topic list*/

.topic-common-list {
   padding: 48rpx 0rpx 24rpx 24rpx; 
   margin: 0 auto;
}

.list-item {
  position: relative;
  float: left;
  overflow: hidden;
  width: 340rpx;
  margin-bottom: 40rpx;
  margin-right: 24rpx;
  background: #fff;
}

.list-item  image.cover {
  width: 340rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

.content-title {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-title text {
  font-size: 26rpx;
  line-height: 1.2;
  color: #1b1b1b;
}

.content-brief {
  padding: 0rpx 0rpx 20rpx;
  font-size: 28rpx;
  line-height: 1.2;
  font-weight: 340;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}
.topic-name {
 float: left; 
 width: 55%;
}
.topic-img {
    float: right;
    text-align: right;
    width: 40%;
    margin-right: 10rpx;
 
}

.img-menu {
  width: 80rpx;
  height: 34rpx;
  display: inline-block;
  text-align: center;
  border-radius: 5rpx;
}