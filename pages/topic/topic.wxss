/*topic list*/

.topic-common-list {
   padding: 140rpx 0rpx 0rpx 40rpx; 
   margin: 0 auto;
}

.list-item {
  position: relative;
  float: left;
  /* border-bottom: 1px solid #eee; */
  overflow: hidden;
  /* clear: both;  */
  width: 94%;
   /* border: 1px solid #ccc; 
  border-radius: 6rpx; */
  margin-bottom: 60rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx rgb(221, 221, 221);
  background: #fff;
}

.list-item  image.cover {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius:10rpx; 
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.content-title {
  padding: 10rpx 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-title text {
  font-size: 24rpx;
  line-height: 1;
  font-weight: bold; 
  color: #1b1b1b;
}

.content-brief {
  padding: 0rpx 0rpx 20rpx 20rpx;
  font-size: 22rpx;
  line-height: 1.2;
  font-weight: 340;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}
.topic-name {
 float: left; 
 width: 55%;
 margin-bottom: 10rpx;
}
.topic-img {
    float: right;
    text-align: right;
    width: 40%;
    margin-right: 10rpx;
 
}

.img-menu {
  width: 90rpx;
  height: 36rpx;
  display: inline-block;
  text-align: center;
  margin-top: 12rpx;
  border-radius: 5rpx;
}
