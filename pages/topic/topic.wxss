.container {
  height: 100%;

}
.topic-container{
  background-color: #fff;
}


/*topic list*/

.topic-common-list {
   padding: 140rpx 0rpx 0rpx 40rpx; 
   margin: 0 auto;
}

.list-item {
  position: relative;
  float: left;
  overflow: hidden;
  width: 94%;
  margin-bottom: 60rpx;
  margin-right: 40rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx rgb(221, 221, 221);
}

.list-item  image.cover {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius:10rpx; 
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.content-title {
  padding: 10rpx 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-title text {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1.0;
  color: #1b1b1b;
}

