/**app.wxss**/

.readlog-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(36,185,181,1);
  height: 320rpx;
  width: 94%;
  border-radius: 5rpx;
  margin-top: 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 36rpx 0 24rpx;
  border-radius: 5rpx;
}

.dec {
  margin-top: 50rpx;
}

.dec-text {
  font-size: 25rpx;
  color: #757575;
}

.userinfo-nickname {
  margin-top: 10rpx;
  color: #fff;
  font-size: 32rpx;
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 32rpx 0;

}

.log-items {
  padding-bottom: 1rpx solid #ededed;
  margin-top: 20rpx;
}

.log-text {
  margin: 32rpx 0;
  font-size: 30rpx;
  color: #757575;
  text-align: left;
  word-wrap:break-word;
  word-break:break-all; 
}

.top-bar {
  margin: 0 auto;
  height: 100rpx; 
  background: #fff;
  width: 94%;
  top: 0;
  z-index: 1;
}

.top-bar-item {
  display: inline-block;
  background: #fff;
  width: 16%;
  color: #9babba;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}

.top-bar-item-Selected {
  border-bottom: 1px solid #495056;
  color: #495056;
}
